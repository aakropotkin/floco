# -*- Makefile -*-
# ============================================================================ #
#
#
#
# ---------------------------------------------------------------------------- #

SHELL ?= /bin/sh
export SHELL

.DEFAULT_GOAL = all

MAKEFILE_DIR = $(patsubst %/, %, $(dir $(abspath $(lastword $(MAKEFILE_LIST)))))

# ---------------------------------------------------------------------------- #

export RM  ?= rm -f
export CXX ?= c++

# ---------------------------------------------------------------------------- #

CXXFLAGS = -std=c++17

# ---------------------------------------------------------------------------- #

.PHONY: all clean FORCE

# ---------------------------------------------------------------------------- #

HEADERS = types.hh graph.hh edge.hh
SOURCES = edge.cc
OBJS    = $(SOURCES:%.cc=%.o)


# ---------------------------------------------------------------------------- #

all: $(OBJS)

# ---------------------------------------------------------------------------- #

clean: FORCE
	$(RM) $(OBJS)


# ---------------------------------------------------------------------------- #

types.hh: edge.hh package.hh node.hh
graph.hh: types.hh

edge.cc: graph.hh


# ---------------------------------------------------------------------------- #
#
#
#
# ============================================================================ #
