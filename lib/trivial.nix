{ lib }: let

# ---------------------------------------------------------------------------- #

  test = p: s: ( builtins.match p s ) != null;

  yank = p: s: let
    m = builtins.match p s;
  in if m == null then null else builtins.head m;

  yankN = n: p: s: let
    m = builtins.match p s;
  in if m == null then null else builtins.elemAt m n;


# ---------------------------------------------------------------------------- #

in {

  inherit
    test
    yank
    yankN
  ;

}


