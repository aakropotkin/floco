# ============================================================================ #
#
#
#
# ---------------------------------------------------------------------------- #

.PHONY: all clean FORCE
.DEFAULT_GOAL = all


# ---------------------------------------------------------------------------- #

CXX        ?= c++
RM         ?= rm -f
CAT        ?= cat
PKG_CONFIG ?= pkg-config


# ---------------------------------------------------------------------------- #

GEN_HEADERS = floco-sql.hh
BINS        = floco-db


# ---------------------------------------------------------------------------- #

.PHONY: gen-headers bin
gen-headers: $(GEN_HEADERS)
bins:        $(BINS)


# ---------------------------------------------------------------------------- #

clean: FORCE
	$(RM) $(GEN_HEADERS) $(BINS)


# ---------------------------------------------------------------------------- #

all: gen-headers bins


# ---------------------------------------------------------------------------- #

floco-sql.hh: ../pjs-core.sql
	echo '#include <string>' > "$@";
	printf 'std::string pjsCoreSchemaSQL = R"SQL(' >> "$@";
	$(CAT) ../pjs-core.sql >> "$@";
	echo ')SQL";' >> "$@";


# ---------------------------------------------------------------------------- #

floco-db: gen-headers pjs-core.cc
	$(CXX) -std=c++17 $$( $(PKG_CONFIG) --libs --cflags sqlite3; ) *.cc -o "$@"


# ---------------------------------------------------------------------------- #
#
#
#
# ============================================================================ #
